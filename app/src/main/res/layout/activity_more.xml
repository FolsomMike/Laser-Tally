<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#CFCFCF"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.yaboosh.ybtech.lasertally.MoreActivity"
    android:gravity="center" >

    <LinearLayout
        android:background="#1A1A1A"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp" >

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="0dp"
            android:textColor="#B2B2B2"
            android:text="Menu"
            android:textSize="40sp" />

        <!-- horizontal spacer -->
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" >
        </View>

        <Button
            android:id="@id/tableRowEditorRedXButton"
            android:background="@drawable/close_x_button"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="handleRedXButtonPressed"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:gravity="center" >

        <Button
            android:background="@drawable/white_styled_button_dark_gray_border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="print"
            android:textSize="30sp"
            style="@style/whiteStyledButton"
            android:onClick="handlePrintButtonPressed" />

        <!-- vertical spacer -->
        <View
            android:layout_width="1dp"
            android:layout_height="40dp" >
        </View>

        <Button
            android:background="@drawable/white_styled_button_dark_gray_border"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="options"
            android:textSize="30sp"
            style="@style/whiteStyledButton"
            android:onClick="handleOptionsButtonPressed" />

    </LinearLayout>

</LinearLayout>