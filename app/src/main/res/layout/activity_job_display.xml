<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    tools:context="com.yaboosh.lasertally.development.main.JobDisplayActivity" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:background="#1A1A1A" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B2B2B2"
            android:text="Job: "
            android:textSize="50dp"/>

        <TextView
            android:id="@id/jobTitleTextView"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="@string/job"
            android:textSize="50dp"/>

        <!-- horizontal spacer -->
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp" >
        </View>

        <Button
            android:background="@drawable/white_styled_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jobInfoButtonText"
            android:textSize="30sp"
            style="@style/whiteStyledButton"
            android:onClick="handleJobInfoButtonPressed" />

        <!-- horizontal spacer -->
        <View
            android:layout_width="10dp"
            android:layout_height="1dp" >
        </View>

        <Button
            android:background="@drawable/white_styled_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moreButtonText"
            android:textSize="30sp"
            style="@style/whiteStyledButton"
            android:onClick="handleMoreButtonPressed" />

    </LinearLayout>

    <!-- horizontal line -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#191919" >
    </View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            tools:context="com.yaboosh.lasertally.development.main.MainActivity" >

            <!-- vertical spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="30dp" >
            </View>

            <Button
                android:id="@id/redoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redoButtonText"
                android:textSize="50sp"
                style="@style/redStyledButton"
                android:background="@drawable/red_styled_button"
                android:visibility="invisible" />

            <!-- vertical spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="10dp" >
            </View>

            <Button
                android:id="@id/measureConnectButton"
                android:layout_width="225dp"
                android:layout_height="200dp"
                android:textSize="50sp"
                android:visibility="invisible"
                style="@style/styledButtonWhiteText" />

        </LinearLayout>

        <!-- horizontal spacer -->
        <View
            android:layout_width="10dp"
            android:layout_height="1dp" >
        </View>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:background="#DDDDDD" >

            <TableLayout
                android:id = "@+id/pipeMeasurementsHeaderTable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="#000000">
                <TableRow>
                    <View style="@style/tableSideBorderLine" />

                    <TextView
                        android:id="@+id/pipeNumberRow"
                        android:text="Pipe #"
                        style="@style/headerTableColumn"
                        />

                    <View style="@style/headerTableColumnDivider" />

                    <TextView
                        android:id="@+id/threadOnRow"
                        android:text="Total Length"
                        style="@style/headerTableColumn"
                        />

                    <View style="@style/headerTableColumnDivider" />

                    <TextView
                        android:id="@+id/threadOffRow"
                        android:text="Adjusted"
                        style="@style/headerTableColumn"
                        />

                    <View style="@style/tableSideBorderLine" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="50dp" >

                    <ScrollView
                        android:id="@id/measurementsTableScrollView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:fadeScrollbars="false"
                        android:scrollbars="vertical" >

                        <TableLayout
                            android:id = "@+id/measurementsTable"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/measurementsTableColor"
                            android:padding="0dp" >

                            <View
                                android:id="@id/measurementsTableBottomBorderLine"
                                android:visibility="gone"
                                style="@style/measurementsTableBottomBorderLine" />

                        </TableLayout>

                    </ScrollView>

                </LinearLayout>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="0dp"
                    android:background="#000000">
                    <TableRow>

                        <View style="@style/tableSideBorderLine" />

                        <TextView
                            android:text="Total"
                            style="@style/headerTableColumn"
                            />

                        <View style="@style/headerTableColumnDivider" />

                        <TextView
                            android:id="@id/totalOfTotalLengthColumnTextView"
                            style="@style/headerTableColumn" />

                        <View style="@style/headerTableColumnDivider" />

                        <TextView
                            android:id="@id/totalOfAdjustedColumnTextView"
                            style="@style/headerTableColumn" />

                        <View style="@style/tableSideBorderLine" />

                    </TableRow>
                </TableLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>