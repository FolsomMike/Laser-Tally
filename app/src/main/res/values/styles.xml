<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="AppBaseTheme"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>

    </style>

    <style name="disabledStyledButton">
        <item name="android:textColor">@color/disabledTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/disabledTextColor</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="styledButtonWhiteText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="redStyledButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="whiteStyledButton">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Used for the the columns in the header table -->
    <style name="headerTableColumn">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Used for the the columns in the table for the pipe measurements -->
    <style name="tableColumn">
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <!-- Table Column Divider - simple line used as a divider -->
    <style name="tableColumnDivider">
        <item name="android:layout_width">0.75dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/headerTableColumnDividerColor</item>
    </style>

    <!-- Table Side Border Line - simple line used as a left or right table border -->
    <style name="tableSideBorderLine">
        <item name="android:layout_width">2.5dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/tableSideBorderLineColor</item>
    </style>

    <!-- Table Bottom Border Line - simple line used as a bottom border -->
    <style name="tableBottomBorderLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2.5dp</item>
        <item name="android:background">@color/tableBottomBorderLineColor</item>
    </style>

    <!-- Table Top Border Line - simple line used as a top border -->
    <style name="tableTopBorderLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/tableBottomBorderLineColor</item>
    </style>

    <!-- Table Bottom Border Line Thick - simple thick line used as a bottom border -->
    <style name="tableBottomBorderLineThick">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0dp</item>
        <item name="android:background">@color/tableBottomBorderLineColor</item>
    </style>

    <!-- Table Top Border Line Thick - simple thick line used as a top border -->
    <style name="tableTopBorderLineThick">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0dp</item>
        <item name="android:background">@color/tableBottomBorderLineColor</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="activityDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:excludeFromRecents">true</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>