<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#00FF00" />
        <stroke
          android:width="1dp"
          android:color="#00B200" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="@dimen/padding_normal"
          android:top="@dimen/padding_normal"
          android:right="@dimen/padding_normal"
          android:bottom="@dimen/padding_normal" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#00FF00"
          android:endColor="#00B200"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#00B200" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="@dimen/padding_normal"
          android:top="@dimen/padding_normal"
          android:right="@dimen/padding_normal"
          android:bottom="@dimen/padding_normal" />
    </shape>
  </item>
</selector>